{
  "manifest_version": 3,
  "name": "EzCopy - Clipboard Manager",
  "version": "1.0.0",
  "description": "Capture copied text from pages, view and manage via popup.",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "EzCopy"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "clipboardWrite",
    "clipboardRead"
  ],
  "icons": {
    "16":"icons/icon16.png",
    "32":"icons/icon32.png",
    "48":"icons/icon48.png",
    "128":"icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "read_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Read clipboard and save text"
    }
  }
}
